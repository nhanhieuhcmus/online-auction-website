<div class="container mt-5" style="max-width: 60%;">
    <div class="navtab-container">
        <ul class="nav nav-tabs nav-justified">
            <li class="nav-item">
                <a data-toggle="tab" class="nav-link active" href="#personal">Cá Nhân</a>
            </li>
            <li class="nav-item">
                <a data-toggle="tab" class="nav-link" href="#security">Khôi phục</a>
            </li>
            <li class="nav-item">
                <a data-toggle="tab" class="nav-link" href="#privacy">Bảo mật</a>
            </li>
            <li class="nav-item">
                <a data-toggle="tab" class="nav-link" href="#myrating">Đánh giá</a>
            </li>
        </ul>
    </div>
    <div class="tab-content">
        <div id="personal" class="tab-pane fade in active show">
            <div class="col-md-8 mx-3">
                <br>
                <h4>Thông tin cá nhân</h4>
                <br>
                <form method="POST" action="/account/change_info">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Họ và tên</label>
                        <input type="text" class="form-control" name="new_name" id="exampleFormControlInput1"
                            placeholder="{{userInfo.full_name}}"required>
                        {{check}}
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Email</label>
                        <input type="email" class="form-control" name="new_email" id="exampleFormControlInput1"
                            placeholder="{{userInfo.email}}"required>
                        {{check}}
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Ngày sinh: </label>
                        <div id="" class="form-control" cols="30" rows="4">{{userInfo.date_of_birth}}</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Ngày tham gia: </label>
                        <div id="" class="form-control" cols="30" rows="4">{{userInfo.date_joined}}</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Địa chỉ</label>
                        <input type="text" class="form-control" name="new_address" id="exampleFormControlInput1"
                            placeholder="{{userInfo.address}}">
                    </div>
                    <button type="submit" style="background-color: purple;" class="text-white btn my-4">Cập
                        nhật</button>
                </form>

            </div>
        </div>
        <div id="security" class="tab-pane fade">
            <div class="col-md-8 mx-3">
                <br>
                <h4>Cài đặt xác thực</h4>
                <br>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Email khôi phục</label>
                    <input type="email" class="form-control" id="exampleFormControlInput1"
                        placeholder="name@example.com">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Số điện thoại khôi phục</label>
                    <input class="form-control" id="exampleFormControlInput1">
                </div>

                <button type="submit" style="background-color: purple;" class="text-white btn my-4">Cập nhật</button>
            </div>
        </div>
        <div id="privacy" class="tab-pane fade">
            <div class="col-md-8 mx-3">
                <br>
                <h4>Thay đổi mật khẩu</h4>
                <br>
                <form action="/account/change_password" method="POST">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Nhập mật khẩu hiện tại</label>
                        <input type="password" class="form-control" name="current_password"
                            id="exampleFormControlInput1">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Nhập mật khẩu mới</label>
                        <input type="password" class="form-control" name="new_password" id="exampleFormControlInput1">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Nhập lại mật khẩu mới</label>
                        <input type="password" class="form-control" name="re_new_password" id="exampleFormControlInput1">
                    </div>
                    <button type="submit" style="background-color: purple;" class="text-white btn my-4">Cập nhật mật
                        khẩu</button>
                </form>
            </div>
        </div>
        <div id="myrating" class="tab-pane fade">
            <div class="col-sm ml-3 pr-5">
                <br>
                <h4>Đánh giá của tôi</h4>
                <br>
                <p class="mb-4"><b>Tổng lượt đánh giá: <span id="total-rating" class="ml-5"> {{userInfo.add_point}}/{{userInfo.minus_point}}</span></b></p>

            </div>
        </div>
    </div>
</div>