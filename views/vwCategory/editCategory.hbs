
  </br> <h4 class="text-center">
    Categories
  </h4>
<div class="card shadow mb-4"></div>
  {{#if this.empty}}
  <div class="card-body">
    <p class="card-text">
      Không có dữ liệu.
    </p>
  </div>
  {{else}}
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col">Category</th>
        <th scope="col" class="text-right">
          <a class="btn btn-outline-success" href="/admin/category/add" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
                Thêm danh mục mới
          </a>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each this.category}}
      <tr>
        <th scope="row" class="text-center">{{id}}</th>
        <td>{{name_category}}</td>
        <td class="text-right">
          <a class="btn btn-sm btn-primary" href="/admin/category/edit/{{id}}" role="button">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{/if}}
</div>